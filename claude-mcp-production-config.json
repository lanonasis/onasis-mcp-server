{
  "mcpServers": {
    "lanonasis-mcp-http": {
      "command": "node",
      "args": [
        "/Users/onasis/dev-hub/mcp-monorepo/packages/standalone-mcp-submodule/src/remote-mcp-client.cjs",
        "--stdio"
      ],
      "env": {
        "VPS_HOST": "mcp.lanonasis.com",
        "VPS_PORT": "443",
        "HTTP_BASE_URL": "https://mcp.lanonasis.com",
        "MCP_MODE": "remote_http",
        "NODE_ENV": "production",
        "MCP_API_KEY": ""
      },
      "description": "Lanonasis MCP-Core via HTTPS (Production)",
      "capabilities": {
        "memory": true,
        "tools": true,
        "health": true,
        "api": true
      },
      "connection": {
        "type": "http",
        "base_url": "https://mcp.lanonasis.com",
        "health_endpoint": "/health",
        "tools_endpoint": "/api/v1/tools",
        "execute_endpoint": "/api/v1/tools/:toolName"
      },
      "notes": [
        "Uses HTTP REST API for tool execution",
        "Requires MCP_API_KEY for authenticated endpoints",
        "All endpoints proxied through nginx on VPS"
      ]
    },
    "lanonasis-mcp-websocket": {
      "command": "node",
      "args": [
        "/Users/onasis/dev-hub/mcp-monorepo/packages/standalone-mcp-submodule/src/websocket-mcp-client.cjs",
        "--stdio"
      ],
      "env": {
        "WS_URL": "wss://mcp.lanonasis.com/ws",
        "HTTP_BASE_URL": "https://mcp.lanonasis.com",
        "MCP_API_KEY": "",
        "NODE_ENV": "production"
      },
      "description": "Lanonasis MCP-Core via WebSocket (Production - Real-time)",
      "capabilities": {
        "memory": true,
        "tools": true,
        "health": true,
        "realtime": true,
        "events": true
      },
      "connection": {
        "type": "websocket",
        "ws_url": "wss://mcp.lanonasis.com/ws",
        "http_fallback": "https://mcp.lanonasis.com",
        "health_endpoint": "/health",
        "tools_endpoint": "/api/v1/tools",
        "events_endpoint": "/api/v1/events"
      },
      "notes": [
        "WebSocket for real-time communication",
        "Falls back to HTTP for tool execution",
        "Requires MCP_API_KEY for authenticated operations",
        "Auto-reconnects on connection loss"
      ]
    },
    "lanonasis-mcp-local": {
      "command": "node",
      "args": [
        "/Users/onasis/dev-hub/mcp-monorepo/packages/standalone-mcp-submodule/src/remote-mcp-client.cjs",
        "--stdio"
      ],
      "env": {
        "VPS_HOST": "localhost",
        "VPS_PORT": "3001",
        "HTTP_BASE_URL": "http://localhost:3001",
        "MCP_MODE": "local_http",
        "NODE_ENV": "development"
      },
      "description": "Lanonasis MCP-Core Local Development",
      "capabilities": {
        "memory": true,
        "tools": true,
        "health": true,
        "api": true
      },
      "connection": {
        "type": "http",
        "base_url": "http://localhost:3001",
        "health_endpoint": "/health",
        "tools_endpoint": "/api/v1/tools",
        "execute_endpoint": "/api/v1/tools/:toolName"
      },
      "notes": [
        "For local development and testing",
        "No authentication required in dev mode",
        "Direct connection to local MCP-Core server"
      ]
    },
    "lanonasis-mcp-stdio-vps": {
      "command": "ssh",
      "args": [
        "vps",
        "node",
        "/opt/mcp-core/dist/index.js",
        "--stdio"
      ],
      "env": {
        "NODE_ENV": "production"
      },
      "description": "Lanonasis MCP-Core via SSH Stdio (Direct VPS)",
      "capabilities": {
        "memory": true,
        "tools": true,
        "health": true,
        "stdio": true
      },
      "connection": {
        "type": "stdio_over_ssh",
        "host": "vps",
        "server_path": "/opt/mcp-core/dist/index.js"
      },
      "notes": [
        "Direct stdio connection over SSH",
        "Most secure option - uses SSH tunnel",
        "Requires SSH key authentication configured",
        "Best for low-latency operations"
      ]
    }
  },
  "globalSettings": {
    "logLevel": "info",
    "timeout": 30000,
    "retryAttempts": 3
  },
  "recommendations": {
    "production": "lanonasis-mcp-websocket (real-time) or lanonasis-mcp-http (stable)",
    "development": "lanonasis-mcp-local",
    "secure": "lanonasis-mcp-stdio-vps (SSH tunnel)",
    "default": "lanonasis-mcp-http"
  }
}
