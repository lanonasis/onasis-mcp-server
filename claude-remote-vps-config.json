{
  "mcpServers": {
    "lanonasis-vps-mcp": {
      "command": "node",
      "args": [
        "/Users/seyederick/DevOps/_project_folders/onasis-mcp-standalone/src/remote-mcp-client.js",
        "--stdio"
      ],
      "env": {
        "VPS_HOST": "168.231.74.29",
        "VPS_PORT": "3001",
        "MCP_MODE": "remote_http",
        "NODE_ENV": "production"
      },
      "description": "Lanonasis VPS MCP Server - Direct HTTP connection to production server",
